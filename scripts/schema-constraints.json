{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "display": {
      "type": "boolean"
    },
    "since": {
      "type": "integer",
      "pattern": "^20[0-9]{2}$"
    },
    "icon": {
      "type": "string",
      "pattern": "^.+\\.((svg)|(jpeg)|(jpg)|(png)|(gif)|(webp))$"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "pattern": "^[\\x20-\\x7E\\xA0-\\xFF]{2,}$"
    },
    "org": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "pattern": "^[\\x20-\\x7E\\xA0-\\xFF]{2,}$"
    },
    "website": {
      "type": "string",
      "pattern": "^(https?:)?//.+\\.[a-zA-Z]+"
    },
    "social": {
      "type": "array",
      "items": {
        "type": "object",
        "patternProperties": {
          "^.*$": {
            "type": "string",
            "pattern": "^(https?:)?//.+\\.[a-zA-Z]+"
          }
        },
        "additionalProperties": false
      },
      "minItems": 0
    },    
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 3,
        "maxLength": 50
      }
    }
  },
  "required": ["display", "since", "icon", "name", "website", "social", "description", "taxonomy", "tags"]
}
